{% set classes = ['paragraph-hero'] %}

{% set bkimage =  file_url(paragraph.field_media_image.entity.field_media_image.entity.uri.value | image_style('homepage_banner')) %}
{% set mbimage =  file_url(paragraph.field_media_image.entity.field_media_image.entity.uri.value | image_style('homepage_banner_mobile')) %}

<div{{ attributes.addClass(classes) }} style="background: url('{{ bkimage }}') no-repeat 50% 50% transparent; background-size: cover;">
  <div class="paragraph-hero--text-contain">
    <div class="paragraph-hero--image-position">
      <div class="paragraph-hero--background"><img src="{{ mbimage }}"></div>
      {% if content.field_media|render %}
      <a class="paragraph-hero--play" data-colorbox-inline=".media--type-remote-video">Play Video</a>
      {% endif %}
    </div>

    <div class="paragraph-hero--text">
      {{ content.field_text }}
      {{ content.field_cta }}
    </div>
    {{ content.field_media }}
  </div>
</div>
